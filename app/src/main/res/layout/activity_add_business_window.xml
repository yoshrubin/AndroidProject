<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    tools:context="com.example.yoshi.funtimes.Controller.AddBusinessWindow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:weightSum="100"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"
            android:weightSum="8">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="Enter business name:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Enter your country:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Enter your business city:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="Enter business street:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="Enter business house number:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="enter business' email:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="enter business phone number:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="Enter business website:"
                android:textColor="@color/darkBlue"
                android:textSize="15sp"
                android:textStyle="normal|bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="8">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="name"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <AutoCompleteTextView
                android:id="@+id/countryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="country"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <EditText
                android:id="@+id/cityEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="city"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <EditText
                android:id="@+id/streetEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="street"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <EditText
                android:id="@+id/housenumEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="house number"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="example@.com"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>

            <EditText
                android:id="@+id/phonenumEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="phone number"
                android:inputType="phone"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>


            <EditText
                android:id="@+id/siteEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/addBusinessButton"
                android:layout_weight="1"
                android:hint="www.example.com"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/test2"/>


        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/addBusinessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_weight="30"
        android:onClick="addBusinessClick"
        android:text="Add Business"
        android:textAllCaps="false"
        android:textColor="@color/GREY"
        android:textSize="20sp"
        android:textStyle="normal|bold" />
</LinearLayout>
